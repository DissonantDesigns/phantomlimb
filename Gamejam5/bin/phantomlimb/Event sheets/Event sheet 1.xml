<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>Event sheet 1</name>
    <events>
        <event-block>
            <conditions>
                <condition id="-2" name="On start of layout" type="System" />
            </conditions>
            <actions>
                <action behavior="Solid" id="0" name="Set enabled" type="Tile">
                    <param id="0" name="State">0</param>
                </action>
                <action id="-3" name="Create object" type="System">
                    <param id="0" name="Object to create">Sprite</param>
                    <param id="1" name="Layer">0</param>
                    <param id="2" name="X">floor(random(0,100))*8</param>
                    <param id="3" name="Y">0</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="1" name="Is overlapping another object" type="Tile">
                    <param id="0" name="Object">Sprite</param>
                </condition>
            </conditions>
            <actions>
                <action behavior="Solid" id="0" name="Set enabled" type="Tile">
                    <param id="0" name="State">1</param>
                </action>
                <action id="-15" name="Set visible" type="Tile">
                    <param id="0" name="Visibility">1</param>
                </action>
            </actions>
        </event-block>
    </events>
</c2eventsheet>
